<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Tract.TractFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/pictures_fragment"
                android:name="com.onion.ktatractcollection.Fragments.TractPictures.PicturesListFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:layout="@layout/fragment_pictures_item_list" />

            <TextView
                android:id="@+id/author_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:labelFor="@id/author_text_field"
                android:text="@string/tract_author_title" />

            <EditText
                android:id="@+id/author_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="author"
                android:drawableStart="@drawable/ic_baseline_create_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="@string/tract_author_hint"
                android:inputType="textPersonName"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/date_button"
                android:text="@string/tract_date_title" />

            <Button
                android:id="@+id/date_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"
                android:text="20 janvier 2018"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/comments_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/comments_text_field"
                android:text="@string/tract_comments_title" />

            <EditText
                android:id="@+id/comments_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="comments"
                android:ems="10"
                android:hint="@string/tract_comments_hint"
                android:inputType="textMultiLine" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>